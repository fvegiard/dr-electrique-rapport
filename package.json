{
  "name": "dr-electrique-rapport",
  "version": "1.0.0",
  "description": "Système de rapports journaliers pour chantiers électriques DR Électrique",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "python -m http.server 8002",
    "build": "echo 'Static files - no build needed'",
    "preview": "python -m http.server 8003",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "deploy": "netlify deploy --prod"
  },
  "keywords": [
    "rapport",
    "chantier",
    "électrique",
    "supabase",
    "react"
  ],
  "author": "L'Alliance Industrielle - Groupe DR Électrique Inc.",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@supabase/supabase-js": "^2.38.0",
    "@anthropic-ai/sdk": "^0.9.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "vite": "^4.4.0",
    "@vitejs/plugin-react": "^4.0.0",
    "tailwindcss": "^3.3.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "netlify-cli": "^17.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dr-electrique/dr-electrique-rapport.git"
  },
  "netlify": {
    "build": {
      "command": "echo 'Static HTML deployment'",
      "publish": "."
    }
  }
}
